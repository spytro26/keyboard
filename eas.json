{
    "cli": {
        "version": ">= 12.0.0"
    },
    "build": {
        "development": {
            "extends": "production",
            "developmentClient": true,
            "distribution": "internal"
        },
        "preview": {
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "simulator": true
            }
        },
        "production": {
            "android": {
                "buildType": "app-bundle"
            },
            "cache": {
                "disabled": true
            }
        },
        "production-apk": {
            "extends": "production",
            "android": {
                "buildType": "apk"
            },
            "cache": {
                "disabled": true
            }
        },
        "production-aab": {
            "extends": "production"
        }
    },
    "submit": {
        "production": {
            "ios": {
                "appleId": "YOUR_APPLE_ID_EMAIL",
                "ascAppId": "YOUR_APP_STORE_CONNECT_APP_ID",
                "appleTeamId": "YOUR_TEAM_ID"
            }
        }
    }
}